<div class="row">
  <div class="col-lg-8">
    <h1 class="mt-4"><%= @publisher.name %></h1>

    <p class="lead">
      <%= link_to 'Publisher homepage', @publisher.homepage_url if @publisher.homepage_url.present? %>
    </p>

    <hr />
    <p>
      <% if @publisher.solicitations.any? %>
        Currently accepting submissions.
      <% else %>
        Not currently accepting submissions.
      <% end %>
    </p>
    <hr />

    <img class="img-fluid rounded" src="http://placehold.it/900x300" alt="">
    <hr />

    <p class="lead">
      <%= @publisher.description %>
    </p>
    <hr />

    <%= render partial: 'components/publishers/analytics_bar' %>
    <hr />

    <% if user_signed_in? %>
      <%= render partial: 'components/comments/form', locals: { publisher: @publisher } %>
    <% end %>
    <%= render partial: 'components/comments/list', locals: { comments: @publisher.comments.order('id DESC') } %>
  </div>

  <%= render partial: 'components/publishers/sidebar', locals: { publisher: @publisher } %>

</div>
